<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Average Rating</th>
      <th>Sales Count</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @results.each do |book| %>
      <tr>
        <td><%= book['title'] %></td>
        <td><%= book['author_name'] %></td>
        <td><%= book['average_rating'] %></td>
        <td><%= book['sales_count'] %></td>
        <td><%= link_to 'Show', book_path(book['id']) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
