<h1>Top Selling Books</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Author</th>
      <th>Total Sales</th>
      <th>Total Sales by Author</th>
      <th>Top 5 Selling in Year</th>
    </tr>
  </thead>
  <tbody>
    <% @top_selling_books.each_with_index do |book, index| %>
      <tr>
        <td><%= index + 1 %></td> <!-- Position number -->
        <td><%= book['name'] %></td>
        <td><%= book['author_name'] %></td>
        <td>$<%= book['total_sales'] %></td>
        <td>$<%= book['total_author_sales'] %></td>
        <td>
          <%= book['top_5_in_year'] %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
