<h1><%= @book['name'] %></h1>
<p>Summary: <%= @book['summary'] %></p>
<p>Date of Publication: <%= @book['date_of_publication'] %></p>
<p>Number of Sales: <%= @book['number_of_sales'] %></p>
<p>Author ID: <%= @book['author_id'] %></p>

<% if @book['cover_image_url'].present? %>
  <%= image_tag @book['cover_image_url'], alt: 'Book Cover' %>
<% end %>

<%= link_to 'Edit', edit_book_path(@book['id']) %> |
<%= link_to 'Delete', book_path(@book['id']), data: { turbo_method: "delete" } %> |
<%= link_to 'Back to Books', books_path %>
