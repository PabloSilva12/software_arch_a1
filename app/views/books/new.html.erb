<h1>New Book</h1>

<%= form_with url: books_path, method: :post, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  
  <p>
    <%= form.label :author_name %><br>
    <%= form.text_field :author_name %>
  </p>
  
  <p>
    <%= form.label :average_rating %><br>
    <%= form.number_field :average_rating, step: 0.1 %>
  </p>
  
  <p>
    <%= form.label :sales_count %><br>
    <%= form.number_field :sales_count %>
  </p>

  <p>
    <%= form.submit 'Create Book' %>
  </p>
<% end %>

<%= link_to 'Back to Books', books_path %>
