<h1>Edit Review</h1>
<%= form_with url: review_path(@id), method: :patch, local: true do %>
  <%= label_tag :review %>
  <%= text_area_tag :review, @review['review'] %><br>

  <%= label_tag :score %>
  <%= number_field_tag :score, @review['score'], min: 1, max: 5 %><br>

  <%= label_tag :number_of_up_votes %>
  <%= number_field_tag :number_of_up_votes, @review['number_of_up_votes'] %><br>

  <%= submit_tag "Update Review" %>
<% end %>


