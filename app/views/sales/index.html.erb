<h1>Sales</h1>
<%= link_to 'Create Sale', new_sale_path, class: 'btn btn-primary' %>
<table>
  <thead>
    <tr>
      <th>Book ID</th>
      <th>Year</th>
      <th>Sales</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @results.each do |sale| %>
      <tr>
        <td><%= sale['book_id'] %></td>
        <td><%= sale['year'] %></td>
        <td><%= sale['sales'] %></td>
        <td><%= link_to 'Show', sale_path(sale['id']) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
